<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:radius="1dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />

            <gradient android:angle="-90" android:endColor="#0099cc" android:startColor="#0099cc" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:radius="1dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />

            <solid android:color="#33b5e5" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:radius="1dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />

            <gradient android:angle="-90" android:endColor="#ffffff" android:startColor="#ffffff" />
        </shape>
    </item>

</selector>